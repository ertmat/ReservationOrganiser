@model RoomViewModel

@{
    ViewData["Title"] = "Dodaj pokój";
}

<div class="container-fluid registrationWrapper clearfix">
    <div class="registrationContent">
        <div class="registrationHeader">
            <h1>Dodaj pokój</h1>
            <br>
            <p>Podaj nazwę i liczbę miejsc</p>
        </div>
        <!--registrationHeader-->
        <br>
        <div asp-validation-summary="ModelOnly"></div>
        <form method="post" enctype="multipart/form-data" asp-antiforgery="true" class="reservation-form">
            <div class="row inputWrapper ">
                <div class="col-md-12 ">
                    <div class="left-inner-addon ">
                        <i class="fa fa-user"></i>
                        <input asp-for="Name" type="text" class="form-control" placeholder="Nazwa pokoju*">
                        <span asp-validation-for="Name"></span>
                    </div>
                    <br>
                    <br>
                    <br>
                </div>
                <div class="col-md-12">
                    <div class="left-inner-addon ">
                        <i class="fa fa-envelope"></i>
                        <input asp-for="Capacity" type="text" class="form-control" value="Ilość miejsc*">
                        <span asp-validation-for="Capacity"></span>
                    </div>
                    <br>
                </div>
            </div>
            <div class="registrationButtonPlaseholder">
                <button type="submit" class="btn btn-info btn-df float-button-light">Dodaj</button>
            </div>
            <!--registrationButtonPlaseholder-->
        </form>
</div>
    <!--registrationContent-->
</div>
<!--registrationWrapper-->
<script type="text/javascript" src="js/jquery-1.11.3.min.js"></script>
<script type="text/javascript" src="lib/waves/waves.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script>
		Waves.attach('.float-button-light', ['waves-button', 'waves-float', 'waves-light']);
		Waves.init();
</script>